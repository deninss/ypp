<Window x:Class="WpfApp1.Pages.AddComment"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.Pages"
      mc:Ignorable="d" 
      MinHeight="200" MinWidth="300" MaxHeight="200" MaxWidth="300"
      Title="AddComment">

    <Grid Background="#f6f6f6">
        <Label Content="Назад" Margin="10,10,10,10" FontSize="14" Opacity="0.6" FontWeight="Bold" MouseDown="TransitionBack"/>
        <Label Content="Комментарий" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,5,0,0"/>
        <TextBox x:Name="Comment" Text="Введите комментарий" VerticalAlignment="Top" Height="37" VerticalContentAlignment="Center" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" Margin="10,47,10,0"/>
        <Button Content="Создать отчет" FontSize="16" FontWeight="Bold" Margin="10,113,10,0" Height="32" VerticalAlignment="Top">
                    <Button.Resources>  
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
      
    </Grid>
</Window>
