<Page x:Class="WpfApp1.Pages.Statistic"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Statistic">

    <Grid Background="#f6f6f6">
        <Label Content="Вернуться назад" Margin="20,10,0,0" FontSize="14" Opacity="0.6" FontWeight="Bold" MouseDown="TransitionBack"/>
        <Label Content="Статистика" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,5,0,0"/>
        <Border Margin="20,60,20,20" CornerRadius="20" Background="White">
            <Grid>
                <Label x:Name="z" Content="Количество выполненных заявок: " HorizontalAlignment="Left" VerticalAlignment="Top"  Margin="10,40,0,0" FontWeight="Bold" FontSize="16" Height="30"/>
                <Label x:Name="c" Content="Среднее время выполнения заявки: " HorizontalAlignment="Left" VerticalAlignment="Top"  Margin="10,120,0,0" FontWeight="Bold" FontSize="16" Height="30"/>
            </Grid>
        </Border>
    </Grid>
</Page>
