<Window x:Class="WpfApp1.Pages.Statistic"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.Pages"
      mc:Ignorable="d" 
      MinHeight="200" MinWidth="450" MaxHeight="200" MaxWidth="450"
      Title="Statistic">

    <Grid Background="#f6f6f6">
        <Label Content="Назад" Margin="0,10,298,0" FontSize="14" Opacity="0.6" FontWeight="Bold" MouseDown="TransitionBack" Height="32" VerticalAlignment="Top" HorizontalAlignment="Right" Width="132"/>
        <Label Content="Статистика" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,5,0,0"/>

        <Label x:Name="CountRequest" Content="Количество выполненных заявок: " HorizontalAlignment="Left" VerticalAlignment="Top"  Margin="10,40,0,0" FontWeight="Bold" FontSize="16" Height="30"/>
        <Label x:Name="AvarageTime" Content="Среднее время выполнения заявки: " HorizontalAlignment="Left" VerticalAlignment="Top"  Margin="10,85,0,0" FontWeight="Bold" FontSize="16" Height="30"/>

    </Grid>
</Window>
